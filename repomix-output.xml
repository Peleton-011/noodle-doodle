	position: absolute;
	width: 30px;
	height: 30px;
	user-drag: none;
	user-select: none;
	pointer-events: auto; /* allow capture */
	image-rendering: auto;
	-moz-user-select: none;
	-webkit-user-drag: none;
	-webkit-user-select: none;
	-ms-user-select: none;
}

