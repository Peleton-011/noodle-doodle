.sauce {
	position: absolute;
	width: 50px;
	height: 50px;
	border-radius: 50px;
	animation: expand 0.4s ease-out;
	background-color: #d63031;
	/* z-index: 1; */
    pointer-events: auto;
    will-change: transform;
}

/* Canvas UI */
#tutorial {
	position: absolute;
	top: 50px;
	font-size: 20px;
	width: 100%;
	text-align: center;
	pointer-events: none;
	z-index: 10;
}

/* Tool Selector UI */
.choices {
	position: absolute;
	bottom: 50px;
	width: 100%;
	text-align: center;
	user-select: none;
	z-index: 1000;
}

.select-wrapper {
	display: inline-block;
	margin: 0 12px;
	cursor: pointer;
}

.select {
	display: inline-block;
	width: 40px;
	height: 40px;
	border-radius: 40px;
	border: 1px solid #000;
	padding: 10px;
	transition: all 0.2s ease;
	background-color: #222;
}

.select.selected {
	border-color: #fff;
	transform: scale(1.1);
}

.select-name {
	margin-top: 5px;
	font-size: 14px;
}

