#sauce-but {
	background-color: #d63031;
}

/* Animations */
@keyframes expand {
	0% {
		transform: scale(0);
		opacity: 0.5;
	}
	100% {
		transform: scale(1);
		opacity: 1;
	}
}

/* Responsive */
@media only screen and (max-width: 600px) {
